{
    "name": "financial_control",
    "version": "1.0.0",
    "description": "Financial Control Full Project",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fecaps/financial-control.git"
    },
    "author": "Fellipe Capelli <fellipecapelli@gmail.com>",
    "license": "ISC",
    "scripts": {
        "postinstall": "npm run installApiDependencies",
        "installApiDependencies": "cd api && npm i && cd ..",
        "generateApiEnvFile": "cd api && cp .env.dist .env && cd ..",
        "runApiSeeders": "cd api && npm run seed && cd ..",
        "buildApi": "cd api && npm run build && cd ..",
        "checkApiStyle": "cd api && npm run checkStyle && cd ..",
        "fixApiStyle": "cd api && npm run fixStyle && cd ..",
        "runApiTests": "cd api && npm test && cd ..",
        "runApiTestsDebugger": "cd api && npm run test-debugger && cd ..",
        "invokeApiFunction": "cd api && FUNCTION_NAME=$FUNCTION_NAME npm run invokeFunction && cd .."
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run checkApiStyle",
            "pre-push": "npm run runApiTests"
        }
    },
    "bugs": {
        "url": "https://github.com/fecaps/financial-control/issues"
    },
    "homepage": "https://github.com/fecaps/financial-control#readme",
    "devDependencies": {
        "husky": "^4.2.3"
    }
}
